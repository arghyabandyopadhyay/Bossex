<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="BusinessGenie.app.Bossex.Views.User.AddUsersPage"
            prefHeight="400.0" prefWidth="600.0">
<bottom>
    <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button onAction="#createUserAction" fx:id="addButton" text="Create _User" />
<!--            <Button onAction="#cancelAction" text="_Cancel" />-->
        </buttons>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </ButtonBar>
</bottom>
<center>
    <VBox prefHeight="295.0" prefWidth="312.0" BorderPane.alignment="CENTER">
        <children>
            <Label text="User Details:">
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </Label>
            <Separator prefWidth="200.0" />
            <HBox prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="129.0" text="*User Name:" />
                    <TextField fx:id="uName"/>
                </children>
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="129.0" text="*User Id:" />
                    <TextField fx:id="uId"/>
                </children>
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="36.0" prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="129.0" text="*Password:" />
                    <PasswordField fx:id="passwordTF"/>
                </children>
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="62.0" prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="129.0" text="*Confirm Password:" />
                    <PasswordField fx:id="confirmPasswordTF" />
                </children>
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="88.0" prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="129.0" text="Email Id:" />
                    <TextField fx:id="emailIdTF"/>
                </children>
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="114.0" prefHeight="25.0" prefWidth="600.0">
                <padding>
                    <Insets bottom="5.0" top="5.0"/>
                </padding>
                <Label prefHeight="25.0" prefWidth="129.0" text="*Mobile No.:"/>
                <TextField fx:id="mNoTF"/>
            </HBox>
        </children>
        <padding>
            <Insets left="5.0" right="5.0" />
        </padding>
    </VBox>
</center>
<top>
    <HBox alignment="CENTER" prefHeight="65.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <children>
            <Label text="Create New User.">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
        </children>
    </HBox>
</top>
<right>
    <VBox prefHeight="295.0" prefWidth="278.0" BorderPane.alignment="CENTER">
        <children>
            <HBox layoutX="10.0" layoutY="114.0" prefHeight="25.0" prefWidth="600.0">
                <padding>
                    <Insets bottom="5.0" top="5.0"/>
                </padding>
                <Label prefHeight="25.0" prefWidth="129.0" text="*Theme:"/>
                <ComboBox fx:id="themeComboBox"/>
            </HBox>

            <HBox layoutX="10.0" layoutY="114.0" prefHeight="25.0" prefWidth="600.0">
                <padding>
                    <Insets bottom="5.0" top="5.0"/>
                </padding>
                <Label prefHeight="25.0" prefWidth="129.0" text="*Role:"/>
                <ComboBox fx:id="roleComboBox"/>
            </HBox>

        </children>
        <padding>
            <Insets left="5.0" right="5.0" />
        </padding>
    </VBox>
</right>

</BorderPane>

